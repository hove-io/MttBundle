<script>
require(['jquery'], function(){
    // to prevent modal content to be cached by bootstrap
    $('body').on(
        'hidden.bs.modal',
        '#base-modal',
        function () {
            $(this).removeData('bs.modal');
            $(this).find('.modal-header, .modal-body, .modal-footer').empty();
        }
    );
    $('.force-show-nojs').removeClass('force-show-nojs');
});
</script>
