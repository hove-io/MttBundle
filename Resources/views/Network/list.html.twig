{% extends "CanalTPMttBundle::generic_list.html.twig" %}

{% block list_title -%}
    {{'network.list'|trans({}, 'default')}}
    -
    <a href="{{ path('canal_tp_mtt_network_edit') }}" data-toggle="modal" data-target="#base-modal" class="btn btn-success">
        <span class="glyphicon glyphicon-plus"></span> {{'network.add'|trans({}, 'default')}}
    </a>
{% endblock %}

{% block table_head -%}
    <th>{{'network.external_coverage_id'|trans({}, 'default')}}</th>
    <th>{{'network.external_id'|trans({}, 'default')}}</th>
    <th>{{'network.token'|trans({}, 'default')}}</th>
    <th>{{'global.actions'|trans({}, 'messages')}}</th>
{% endblock %}

{% block table_body -%}
    {% if networks|length == 0 %}
        <tr>
            <td colspan="5">
                {{'global.no_items'|trans}}
            </td>
        </tr>
    {% else %}
        {% for network in networks %}
            <tr>
                <td>
                    {{ network.externalCoverageId }}
                </td>
                <td>
                    {{ network.externalId }}
                </td>
                <td>
                    {{ network.token }}
                </td>
                <td>
                    <a class="btn btn-default" href="{{ path('canal_tp_mtt_network_edit', {'networkId': network.id }) }}" data-toggle="modal" data-target="#base-modal">
                            <span class="glyphicon glyphicon-edit"></span> {{'global.edit'|trans({}, 'messages')}}
                        </a>
                </td>
            </tr>
        {% endfor %}
    {% endif %}
{% endblock %}
