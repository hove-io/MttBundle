{% if editable == true or mode == 'edit' %}
    <script>
        var globalParameters = {
            timetableId: "{{ timetableId|raw }}",
            externalNetworkId: "{{ externalNetworkId|raw }}",
            type: "{{ type|raw }}"
        };

        require(['jquery', 'mtt/layout', 'bootstrap'], function($, Layout) {
            var layout = Layout.init(
                $('{{ selector|raw }}'),
                globalParameters
            );
        });
        require(['jquery', 'mtt/layout/validator', 'bootstrap'], function($, Validator){
            var validator = Validator.init({
                'wrapper': $('{{ selector|raw }}')
            });
            validator.validate();
        });
    </script>
{% endif %}
