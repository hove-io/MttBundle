{% extends "CanalTPMttBundle::generic_list.html.twig" %}

{% block list_title -%}
    {{'season.list'|trans({}, 'default')}}
    -
    <a href="#" data-toggle="modal" data-target="#base-modal" data-remote="{{ path('canal_tp_mtt_season_edit', {'coverage_id': coverageId, 'externalNetworkId': externalNetworkId}) }}" class="btn btn-success">
        <span class="glyphicon glyphicon-plus"></span> {{'season.create'|trans({}, 'default')}}
    </a>
{% endblock %}

{% block table_head -%}
    <th>{{'season.title'|trans({}, 'default')}}</th>
    <th>{{'season.start_date'|trans({}, 'default')}}</th>
    <th>{{'season.end_date'|trans({}, 'default')}}</th>
    <th>{{'season.published'|trans({}, 'default')}}</th>
    <th>{{'global.actions'|trans({}, 'messages')}}</th>
{% endblock %}

{% block table_body -%}
    {% if seasons|length == 0 %}
        <tr>
            <td colspan="4">
                {{'global.no_items'|trans}}
            </td>
        </tr>
    {% else %}
        {% for season in seasons %}
            <tr>
                <td>
                    {{ season.title }}
                </td>
                <td>
                    {{ season.startDate|date('d/m/Y') }}
                </td>
                <td>
                    {{ season.endDate|date('d/m/Y') }}
                </td>
                <td>
                    {{ macros.display_bool(season.published) }}
                </td>
                <td class="action">
                    <div class="btn-group">
                        <a  class="btn btn-default" href="#" data-toggle="modal" data-target="#base-modal" data-remote="{{ path('canal_tp_mtt_season_edit', {'externalNetworkId': externalNetworkId, 'season_id': season.id }) }}">
                            <span class="glyphicon glyphicon-edit"></span> {{'global.edit'|trans({}, 'messages')}}
                        </a>
                        {% if (season.published) %}
                            <a class="btn btn-default" href="{{ path(
                                'canal_tp_mtt_season_unpublish',
                                {
                                    'externalNetworkId': externalNetworkId,
                                    'seasonId': season.id
                                }
                            ) }}">
                                <span class="glyphicon glyphicon-eye-close"></span> {{'global.unpublish'|trans({}, 'messages')}}
                            </a>
                        {% else %}
                            <a href="" class="btn btn-default" data-toggle="modal" data-target="#season-publication-modal-{{season.id}}">
                                <span class="glyphicon glyphicon-eye-open"></span> {{'global.publish'|trans({}, 'messages')}}
                            </a>
                            <div id="season-publication-modal-{{season.id}}" class="modal fade">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        {% embed "CanalTPMttBundle::modal.html.twig" %}
                                            {% block modal_title %}{{'distribution.generation_title'|trans({}, 'default')}}{% endblock %}
                                            {% block modal_body %}
                                            {{'season.publication_and_generation'|trans({}, 'default')}}
                                            {% endblock %}
                                            {% block modal_actions %}
                                            <a href="{{path(
                                                        'canal_tp_mtt_season_publish',
                                                        {
                                                            'externalNetworkId': externalNetworkId,
                                                            'seasonId': season.id,
                                                            'withGeneration': true
                                                        }
                                                    ) }}" class="btn btn-success">
                                                {{'season.buttons.generate_then_publish'|trans({}, 'default')}}
                                            </a>
                                            <a href="{{path(
                                                        'canal_tp_mtt_season_publish',
                                                        {
                                                            'externalNetworkId': externalNetworkId,
                                                            'seasonId': season.id,
                                                            'withGeneration': false
                                                        }
                                                    ) }}" class="btn btn-success">
                                                {{'season.buttons.publish_only'|trans({}, 'default')}}
                                            </a>
                                            {% endblock %}
                                        {% endembed %}
                                    </div><!-- /.modal-content -->
                                </div><!-- /.modal-dialog -->
                            </div><!-- /.modal-dialog -->
                        {% endif %}
                        <a class="btn btn-default" href="{{ path(
                            'canal_tp_mtt_season_generate_pdfs',
                            {
                                'externalNetworkId': externalNetworkId,
                                'seasonId': season.id
                            }
                        ) }}">
                            <span class="glyphicon glyphicon-file"></span> {{'season.generate_pdf'|trans({}, 'default')}}
                        </a>
                        <a onClick="javascript:return confirm('{{'global.confirm_season_delete'|trans({}, 'messages')}}')" class="btn btn-danger" href="{{ path('canal_tp_mtt_season_delete', {'externalNetworkId': externalNetworkId, 'seasonId': season.id }) }}">
                            <span class="glyphicon glyphicon-trash"></span> {{'global.delete'|trans({}, 'messages')}}
                        </a>
                    </div>
                </td>
            </tr>
        {% endfor %}
    {% endif %}
{% endblock %}

{% block modal_body %}
    {{'season.publication_and_generation'|trans({}, 'default')}}
{% endblock %}

{% block modal_actions %}
    <button id="submit-btn" type="submit" name="with_generation" class="btn btn-success">
        {{'season.buttons.generate_then_publish'|trans({}, 'default')}}
    </button>
    <button type="submit" class="btn btn-success">
        {{'season.buttons.publish_only'|trans({}, 'default')}}
    </button>
{% endblock %}